<div class="container">
  <div class="row">
    <!--ジャンル検索のサイドバー-->
    <div class="col-lg-3 p-5">
      <table class="table">
        <thead>
          <tr>
            <th>
              ジャンル検索
            </th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= link_to admin_genre_path(genre.id) do %>
                <%= genre.name %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <!--ジャンル一覧-->
    <div class="col-lg-9 p-5">
      <h4 class="font-weight-bold p-2"><%= @genre.name %>一覧</h4>
        <div class="row p-2">
        <% @genre.items.each do |item| %>
          <div class="col-lg-3 font-weight-bold">
          <%= link_to item_path(item.id) do %>
            <%= image_tag item.get_image, size: '150x100' %><br>
            <%= item.name %><br>
          <% end %>
          ￥<%= item.with_tax_price.to_s(:delimited) %>
        </div>
        <% end %>
    </div>
  </div>
</div>