<div class="container">
  <div class="row">
    <!--ジャンル検索のサイドバー-->
    <div class="col-lg-3 p-5">
      <table class="table">
        <thead>
          <tr>
            <th>
              ジャンル検索
            </th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= link_to admin_genre_path(genre.id) do %>
                <%= genre.name %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <!--ジャンル一覧-->
    <div class="col-lg-9 p-5">
      <h4><%= @genre.name %>一覧</h4>
        <table>
          <tbody>
            <tr class="item-box">
              <% @genre.items.each do |item| %>
                <td class="item">
                  <%= link_to item_path(item) do %>
                    <%= item.name %><br>
                    ￥<%= item.price %>
                  <% end %>
                </td>
              <% end %>
            </tr>
          </tbody>
        </table>
    </div>
  </div>
</div>
