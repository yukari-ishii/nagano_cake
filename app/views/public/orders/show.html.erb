<h4>注文履歴詳細</h4>

<h5>注文詳細</h5>
 <table class ="table table-bordered">
    <tr>
      <td>注文日</td>
      <td><%= @order.created_at %></td>
    </tr>
    <tr>
      <td>配送先</td>
      <td><%= @order.address %></td>
    </tr>
    <tr>
      <td>支払方法</td>
      <td><%= @order.payment_method %></td>
    </tr>
    <tr>
      <td>ステータス</td>
      <td><%= @order.status %></td>
    </tr>
  </table>
  
  <h5>請求金額</h5>
  <table class ="table table-bordered">
    <tr>
      <td>商品合計</td>
      <td><%= @sum %></td>
    </tr>
    <tr>
      <td>配送料</td>
      <td><%= @order.shipping_cost %></td>
    </tr>
    <tr>
      <td>ご請求額</td>
      <td><%= @order.total_payment %></td>
    </tr>
  </table>
  
  <h5>注文内容</h5>
  <table class="table table-bordered">
  <tr class ="table-active">
    <th>商品</th>
    <th>単価（税込）</th>
    <th>個数</th>
    <th>小計</th>
  </tr>
  <% @orders.each do |order| %>
  <tr>
    <td><%= order.created_at %></td>
    <td><%= order.address %></td>
    <td><%= order.name %></td>
    <td><%= order.total_payment %></td>
  </tr>
  <% end %>
  
</table>