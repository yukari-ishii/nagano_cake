<div class="container">
  <!--見出し-->
  <div class="row">
    <div class="col-lg-4 bg-light m-5">
      <h5>配送先登録/一覧</h5>
    </div>
  <div class="col-lg-8"></div>
  </div>
  <!--配送先登録欄-->
  <%= form_with model: @address, url: addresses_path, method: :post do |f| %>
  <div class="form-group row">
    <label class="col-lg-3">郵便番号（ハイフンなし）</label>
    <div class="col-lg-9">
      <%= f.text_field :postal_code %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-lg-3">住所</label>
    <div class="col-lg-9">
      <%= f.text_field :address %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-lg-3">宛名</label>
    <div class="col-lg-3">
      <%= f.text_field :name %>
    </div>
    <div class="col-lg-6 p-5">
      <%= f.submit '新規登録', class: 'btn btn-success' %>
    </div>
  </div>
  <% end %>
  <!--配送先一覧-->
  <div class="row">
    <div class="col-lg-9">
      <table class="table table-bordered">
        <tr class ="table-active">
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th><br></th> <!--空白タグ-->
        </tr>
        <% @addresses.each do |address| %>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td>
            <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-success" %>
            <%= link_to "削除する", address_path(address.id), method: :delete, class: "btn btn-danger" %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
    <div class="col-lg-3"></div>
  </div>
</div>