<div class="container">
  <!--見出し-->
  <div class="row">
    <div class="col-lg-4 bg-light m-5">
      <h5>配送先編集</h5>
    </div>
  <div class="col-lg-8"></div>
  </div>
  <!--配送先編集欄-->
  <%= form_with model: @address, url: address_path(@address.id), method: :patch do |f| %>
  <div class="form-group row">
    <label class="col-lg-3">郵便番号（ハイフンなし）</label>
    <div class="col-lg-9">
      <%= f.text_field :postal_code %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-lg-3">住所</label>
    <div class="col-lg-9">
      <%= f.text_field :address %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-lg-3">宛名</label>
    <div class="col-lg-3">
      <%= f.text_field :name %>
    </div>
    <div class="col-lg-6">
      <%= f.submit '変更内容を保存', class: 'btn btn-success' %>
    </div>
  </div>
  <% end %>
</div>